<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.20/owo-ui.xsd">
    <components>
        <flow-layout direction="vertical">
            <children>
                <flow-layout direction="vertical" id="bar-holder">
                    <children/>
                </flow-layout>

                <flow-layout direction="horizontal">
                    <children>
                        <flow-layout direction="vertical">
                            <children>
                                <flow-layout direction="horizontal">
                                    <children>
                                        <label>
                                            <text>Selections</text>
                                            <sizing>
                                                <horizontal method="fill">80</horizontal>
                                            </sizing>
                                            <shadow>true</shadow>
                                        </label>
                                        <button>
                                            <text>+</text>
                                            <sizing>
                                                <horizontal method="fill">20</horizontal>
                                            </sizing>
                                            <renderer>
                                                <flat color="#50000000" hovered-color="#77afafaf" disabled-color="black"/>
                                            </renderer>
                                            <horizontal-alignment>right</horizontal-alignment>
                                            <vertical-alignment>center</vertical-alignment>
                                        </button>
                                    </children>
                                    <vertical-alignment>center</vertical-alignment>
                                    <sizing>
                                        <horizontal method="fill">100</horizontal>
                                    </sizing>
                                    <padding><vertical>5</vertical></padding>
                                </flow-layout>
                                <scroll direction="vertical">
                                    <flow-layout direction="vertical" id="selection-area-item-holder">
                                        <children/>
                                        <sizing>
                                            <horizontal method="fill">100</horizontal>
                                            <vertical method="fill">100</vertical>
                                        </sizing>
                                        <surface>
                                            <flat>#50000000</flat>
                                        </surface>
                                        <padding>
                                            <all>5</all>
                                        </padding>
                                        <gap>5</gap>
                                    </flow-layout>
                                    <sizing>
                                        <horizontal method="fill">100</horizontal>
                                        <vertical method="fill">90</vertical>
                                    </sizing>
                                </scroll>
                            </children>
                            <sizing>
                                <horizontal method="fill">100</horizontal>
                            </sizing>
                            <horizontal-alignment>left</horizontal-alignment>
                        </flow-layout>
                    </children>

                    <surface>
                        <flat>#55000000</flat>
                    </surface>

                    <sizing>
                        <horizontal method="fill">95</horizontal>
                        <vertical method="fill">80</vertical>
                    </sizing>

                    <gap>5</gap>

                    <padding>
                        <all>10</all>
                    </padding>

                    <vertical-alignment>center</vertical-alignment>

                    <positioning type="relative">50,50</positioning>
                </flow-layout>
            </children>

            <sizing>
                <horizontal method="fill">100</horizontal>
                <vertical method="fill">100</vertical>
            </sizing>

            <vertical-alignment>top</vertical-alignment>
            <horizontal-alignment>center</horizontal-alignment>

            <padding>
                <all>10</all>
            </padding>

            <surface>
                <blur quality="50" size="10"/>
            </surface>
        </flow-layout>
    </components>
</owo-ui>