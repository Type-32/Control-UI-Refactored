<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.20/owo-ui.xsd">
    <components>
        <flow-layout direction="vertical">
            <children>
                <flow-layout direction="horizontal">
                    <children>
                        <flow-layout direction="horizontal">
                            <children>
                            </children>
                            <sizing>
                                <horizontal method="fill">50</horizontal>
                            </sizing>
                            <horizontal-alignment>left</horizontal-alignment>
                            <vertical-alignment>center</vertical-alignment>
                            <gap>5</gap>
                        </flow-layout>
                        <flow-layout direction="vertical">
                            <children>
                                <label>
                                    <text>Quick Actions</text>
                                    <horizontal-text-alignment>center</horizontal-text-alignment>
                                    <vertical-text-alignment>center</vertical-text-alignment>
                                    <color>dark-gray</color>
                                </label>
                                <label>
                                    <text>Menu</text>
                                    <horizontal-text-alignment>center</horizontal-text-alignment>
                                    <vertical-text-alignment>center</vertical-text-alignment>
                                    <color>gray</color>
                                </label>
                            </children>
                            <horizontal-alignment>center</horizontal-alignment>
                            <vertical-alignment>center</vertical-alignment>

                            <positioning type="relative">50,50</positioning>

                            <sizing>
                                <horizontal method="fill">100</horizontal>
                            </sizing>
                        </flow-layout>
                        <flow-layout direction="horizontal">
                            <children>
                                <button id="action.stop-all">
                                    <text>Stop</text>
                                    <horizontal-alignment>right</horizontal-alignment>
                                </button>
                                <button id="action.pause-all">
                                    <text>Pause</text>
                                    <horizontal-alignment>right</horizontal-alignment>
                                </button>
                            </children>
                            <sizing>
                                <horizontal method="fill">50</horizontal>
                            </sizing>
                            <horizontal-alignment>right</horizontal-alignment>
                            <vertical-alignment>center</vertical-alignment>
                            <gap>5</gap>
                        </flow-layout>
                    </children>

                    <sizing>
                        <horizontal method="fill">80</horizontal>
                    </sizing>

                    <horizontal-alignment>center</horizontal-alignment>
                    <vertical-alignment>top</vertical-alignment>

                    <padding>
                        <all>5</all>
                    </padding>

                    <surface>
                        <panel dark="true"/>
                    </surface>
                </flow-layout>

                <flow-layout direction="vertical" id="navigation">
                    <children>
                        <button id="menu.mining">
                            <text>Mining</text>
                            <surface>
                                <panel dark="true"/>
                            </surface>
                            <sizing>
                                <horizontal method="fill">20</horizontal>
                            </sizing>
                        </button>
                        <button id="menu.commands">
                            <text>Commands</text>
                            <surface>
                                <panel dark="true"/>
                            </surface>
                            <sizing>
                                <horizontal method="fill">20</horizontal>
                            </sizing>
                        </button>
                        <button id="menu.waypoints">
                            <text>Waypoints</text>
                            <surface>
                                <panel dark="true"/>
                            </surface>
                            <sizing>
                                <horizontal method="fill">20</horizontal>
                            </sizing>
                        </button>
                        <button id="menu.settings">
                            <text>Settings</text>
                            <surface>
                                <panel dark="true"/>
                            </surface>
                            <sizing>
                                <horizontal method="fill">20</horizontal>
                            </sizing>
                        </button>
                    </children>

                    <surface>
                        <vanilla-translucent/>
                    </surface>

                    <sizing>
                        <horizontal method="content">10</horizontal>
                        <vertical method="content">10</vertical>
                    </sizing>

                    <gap>5</gap>

                    <vertical-alignment>center</vertical-alignment>
                    <horizontal-alignment>center</horizontal-alignment>

                    <positioning type="relative">50,50</positioning>
                </flow-layout>
            </children>

            <sizing>
                <horizontal method="fill">100</horizontal>
                <vertical method="fill">100</vertical>
            </sizing>

            <vertical-alignment>top</vertical-alignment>
            <horizontal-alignment>center</horizontal-alignment>

            <padding>
                <all>10</all>
            </padding>

            <surface>
                <blur quality="50" size="10"/>
            </surface>
        </flow-layout>
    </components>
</owo-ui>