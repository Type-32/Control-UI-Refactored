<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.20/owo-ui.xsd">
    <components>
        <flow-layout direction="vertical">
            <children>
<!--                <quick-actions-bar/>-->
                <flow-layout direction="vertical" id="bar-holder">
                    <children/>
                </flow-layout>

                <flow-layout direction="vertical" id="navigation">
                    <children>
                        <button id="menu.mining">
                            <text>Mining</text>
                            <renderer>
                                <flat color="#77000000" hovered-color="#77afafaf" disabled-color="black"/>
                            </renderer>
                            <sizing>
                                <horizontal method="fill">20</horizontal>
                            </sizing>
                        </button>
                        <button id="menu.commands">
                            <text>Commands</text>
                            <renderer>
                                <flat color="#77000000" hovered-color="#77afafaf" disabled-color="black"/>
                            </renderer>
                            <sizing>
                                <horizontal method="fill">20</horizontal>
                            </sizing>
                        </button>
                        <button id="menu.waypoints">
                            <text>Waypoints</text>
                            <renderer>
                                <flat color="#77000000" hovered-color="#77afafaf" disabled-color="black"/>
                            </renderer>
                            <sizing>
                                <horizontal method="fill">20</horizontal>
                            </sizing>
                        </button>
                        <button id="menu.settings">
                            <text>Settings</text>
                            <renderer>
                                <flat color="#77000000" hovered-color="#77afafaf" disabled-color="black"/>
                            </renderer>
                            <sizing>
                                <horizontal method="fill">20</horizontal>
                            </sizing>
                        </button>
                    </children>

                    <surface>
                        <flat>#55000000</flat>
                        <!--                    <outline>#000000</outline>-->
                    </surface>

                    <sizing>
                        <horizontal method="content">10</horizontal>
                        <vertical method="content">10</vertical>
                    </sizing>

                    <gap>5</gap>

                    <vertical-alignment>center</vertical-alignment>
                    <horizontal-alignment>center</horizontal-alignment>

                    <positioning type="relative">50,50</positioning>
                </flow-layout>
            </children>

            <sizing>
                <horizontal method="fill">100</horizontal>
                <vertical method="fill">100</vertical>
            </sizing>

            <vertical-alignment>top</vertical-alignment>
            <horizontal-alignment>center</horizontal-alignment>

            <padding>
                <all>10</all>
            </padding>

            <surface>
                <blur quality="50" size="10"/>
            </surface>
        </flow-layout>
    </components>
</owo-ui>