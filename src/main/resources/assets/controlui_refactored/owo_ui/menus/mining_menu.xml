<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.20/owo-ui.xsd">
    <components>
        <flow-layout direction="vertical">
            <children>
                <flow-layout direction="vertical" id="bar-holder">
                    <children/>
                </flow-layout>

                <flow-layout direction="horizontal">
                    <children>
                        <flow-layout direction="vertical">
                            <children>
                                <label>
                                    <text>Current Active Presets</text>
                                </label>
                                <stack-layout>
                                    <children></children>
                                </stack-layout>
                            </children>
                            <sizing>
                                <horizontal method="fill">20</horizontal>
                                <vertical method="fill">100</vertical>
                            </sizing>
                        </flow-layout>
                        <flow-layout direction="vertical">
                            <children>
                                <flow-layout direction="horizontal">
                                    <children>
                                        <label>
                                            <text>Available Presets</text>
                                        </label>
                                        <button>
                                            <text>New...</text>
                                        </button>
                                    </children>
                                    <sizing>
                                        <horizontal method="fill">100</horizontal>
                                    </sizing>
                                </flow-layout>
                                <stack-layout>
                                    <children></children>
                                </stack-layout>
                            </children>
                            <sizing>
                                <horizontal method="fill">80</horizontal>
                                <vertical method="fill">100</vertical>
                            </sizing>
                        </flow-layout>
                    </children>

                    <surface>
                        <flat>#55000000</flat>
                    </surface>

                    <sizing>
                        <horizontal method="fill">70</horizontal>
                        <vertical method="fill">70</vertical>
                    </sizing>

                    <gap>5</gap>

                    <padding>
                        <all>5</all>
                    </padding>

                    <vertical-alignment>center</vertical-alignment>
                    <horizontal-alignment>center</horizontal-alignment>

                    <positioning type="relative">50,50</positioning>
                </flow-layout>
            </children>

            <sizing>
                <horizontal method="fill">100</horizontal>
                <vertical method="fill">100</vertical>
            </sizing>

            <vertical-alignment>top</vertical-alignment>
            <horizontal-alignment>center</horizontal-alignment>

            <padding>
                <all>10</all>
            </padding>

            <surface>
                <blur quality="50" size="10"/>
            </surface>
        </flow-layout>
    </components>
</owo-ui>