<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.20/owo-ui.xsd">
    <components>
        <flow-layout direction="horizontal">
            <children>
                <collapsible>
                    <children>
                        <flow-layout direction="vertical">
                            <children>
                                <label>
                                    <text>Current Processes</text>
                                </label>
                            </children>
                            <padding>
                                <all>5</all>
                            </padding>
                        </flow-layout>
                    </children>
                    <text>ℹ</text>
                    <tooltip-text>Current Process</tooltip-text>
                    <horizontal-alignment>left</horizontal-alignment>
                    <vertical-alignment>bottom</vertical-alignment>
                    <surface>
                        <flat>#50000000</flat>
                        <outline>#99000000</outline>
                    </surface>
                    <sizing>
                        <horizontal method="fill">10</horizontal>
                        <vertical method="fill">10</vertical>
                    </sizing>
                    <positioning type="relative">50,50</positioning>
                </collapsible>
            </children>
            <positioning type="relative">0,50</positioning>
            <sizing>
                <horizontal method="fill">100</horizontal>
                <vertical method="fill">100</vertical>
            </sizing>
            <padding>
                <all>10</all>
            </padding>
        </flow-layout>
    </components>
    <templates>
<!--        !TODO Remove or unobstruct this element, currently this element overlays the entire screen which blocks mouse pointer click raycasts and thus blocks interaction with the UI-->
        <template name="processes-info">
            <flow-layout direction="horizontal">
                <children>
                    <collapsible>
                        <children>
                            <flow-layout direction="vertical">
                                <children>
                                    <label>
                                        <text>Current Processes</text>
<!--                                        TODO: Implement Process info here, ETA, etc.-->
                                    </label>
                                </children>
                                <padding>
                                    <all>5</all>
                                </padding>
                                <sizing>
                                    <horizontal method="content">10</horizontal>
                                </sizing>
                                <surface>
                                    <flat>#50000000</flat>
                                    <outline>#99000000</outline>
                                </surface>
                            </flow-layout>
                        </children>
                        <text>ℹ</text>
                        <tooltip-text>Current Process</tooltip-text>
                        <horizontal-alignment>left</horizontal-alignment>
                        <vertical-alignment>bottom</vertical-alignment>
                        <sizing>
                            <horizontal method="content">0</horizontal>
                            <vertical method="fill">10</vertical>
                        </sizing>
                        <positioning type="relative">0,100</positioning>
                    </collapsible>
                </children>
                <positioning type="relative">50,50</positioning>
                <sizing>
                    <horizontal method="fill">100</horizontal>
                    <vertical method="fill">100</vertical>
                </sizing>
                <padding>
                    <all>5</all>
                </padding>
            </flow-layout>
        </template>
    </templates>
</owo-ui>