<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.20/owo-ui.xsd">
    <components>
        <flow-layout direction="horizontal">
            <children>
                <flow-layout direction="vertical">
                    <children>
                        <label>
                            <text>{{preset-name}}</text>
                            <horizontal-text-alignment>left</horizontal-text-alignment>
                            <vertical-text-alignment>top</vertical-text-alignment>
                        </label>
                        <label>
                            <text>{{preset-desc}}</text>
                            <color>gray</color>
                            <horizontal-text-alignment>left</horizontal-text-alignment>
                            <vertical-text-alignment>top</vertical-text-alignment>
                        </label>
                        <flow-layout direction="horizontal" id="preset-blocks-preview-list">
                            <children/>
                            <sizing>
                                <horizontal method="fill">100</horizontal>
                            </sizing>
                            <horizontal-alignment>left</horizontal-alignment>
                            <vertical-alignment>bottom</vertical-alignment>
                        </flow-layout>
                    </children>
                    <horizontal-alignment>left</horizontal-alignment>
                    <vertical-alignment>center</vertical-alignment>
                    <sizing>
                        <vertical method="content">5</vertical>
                        <horizontal method="fill">80</horizontal>
                    </sizing>
                </flow-layout>
                <flow-layout direction="vertical">
                    <children>
                        <button id="action.edit-preset">
                            <text>Edit</text>
                            <tooltip-text>Edit this Preset</tooltip-text>
                            <horizontal-alignment>center</horizontal-alignment>
                            <renderer>
                                <flat color="#50000000" hovered-color="#77afafaf" disabled-color="black"/>
                            </renderer>
                            <sizing>
                                <vertical method="fill">50</vertical>
                                <horizontal method="fill">100</horizontal>
                            </sizing>
                        </button>
                        <button id="action.edit-preset">
                            <text>+</text>
                            <tooltip-text>Activate</tooltip-text>
                            <horizontal-alignment>center</horizontal-alignment>
                            <renderer>
                                <flat color="#50000000" hovered-color="#77afafaf" disabled-color="black"/>
                            </renderer>
                            <sizing>
                                <vertical method="fill">50</vertical>
                                <horizontal method="fill">100</horizontal>
                            </sizing>
                        </button>
                    </children>
                    <sizing>
                        <vertical method="fill">100</vertical>
                        <horizontal method="fill">20</horizontal>
                    </sizing>
                </flow-layout>
            </children>

            <sizing>
                <horizontal method="fill">100</horizontal>
                <vertical method="fixed">22</vertical>
            </sizing>

            <horizontal-alignment>center</horizontal-alignment>
            <vertical-alignment>top</vertical-alignment>
        </flow-layout>
    </components>
    <templates>
        <template name="active-mining-preset-item">
            <flow-layout direction="horizontal">
                <children>
                    <flow-layout direction="vertical">
                        <children>
                            <label>
                                <text>{{preset-name}}</text>
                                <horizontal-text-alignment>left</horizontal-text-alignment>
                                <vertical-text-alignment>top</vertical-text-alignment>
                            </label>
                            <label>
                                <text>{{preset-desc}}</text>
                                <color>gray</color>
                                <horizontal-text-alignment>left</horizontal-text-alignment>
                                <vertical-text-alignment>top</vertical-text-alignment>
                            </label>
                            <flow-layout direction="horizontal" id="preset-blocks-preview-list">
                                <children/>
                                <sizing>
                                    <horizontal method="fill">100</horizontal>
                                </sizing>
                                <horizontal-alignment>left</horizontal-alignment>
                                <vertical-alignment>bottom</vertical-alignment>
                            </flow-layout>
                        </children>
                        <horizontal-alignment>left</horizontal-alignment>
                        <vertical-alignment>center</vertical-alignment>
                        <sizing>
                            <vertical method="content">5</vertical>
                            <horizontal method="fill">80</horizontal>
                        </sizing>
                    </flow-layout>
                    <flow-layout direction="vertical">
                        <children>
                            <button id="action.edit-preset">
                                <text>Edit</text>
                                <tooltip-text>Edit this Preset</tooltip-text>
                                <horizontal-alignment>center</horizontal-alignment>
                                <renderer>
                                    <flat color="#50000000" hovered-color="#77afafaf" disabled-color="black"/>
                                </renderer>
                                <sizing>
                                    <vertical method="fill">50</vertical>
                                    <horizontal method="fill">100</horizontal>
                                </sizing>
                            </button>
                            <button id="action.edit-preset">
                                <text>Del</text>
                                <tooltip-text>Delete this Preset</tooltip-text>
                                <horizontal-alignment>center</horizontal-alignment>
                                <renderer>
                                    <flat color="#50000000" hovered-color="#77afafaf" disabled-color="black"/>
                                </renderer>
                                <sizing>
                                    <vertical method="fill">50</vertical>
                                    <horizontal method="fill">100</horizontal>
                                </sizing>
                            </button>
                        </children>
                        <sizing>
                            <vertical method="fill">100</vertical>
                            <horizontal method="fill">20</horizontal>
                        </sizing>
                    </flow-layout>
                </children>

                <sizing>
                    <horizontal method="fill">100</horizontal>
                    <vertical method="fixed">22</vertical>
                </sizing>

                <horizontal-alignment>center</horizontal-alignment>
                <vertical-alignment>top</vertical-alignment>
            </flow-layout>
        </template>
    </templates>
</owo-ui>