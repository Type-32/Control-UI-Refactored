<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.20/owo-ui.xsd">
    <components>
        <flow-layout direction="vertical">
            <children>
                <flow-layout direction="vertical" id="bar-holder">
                    <children/>
                </flow-layout>

                <flow-layout direction="vertical">
                    <children>
                        <label>
                            <text>Create New Mining Preset</text>
                            <shadow>true</shadow>
                            <vertical-text-alignment>center</vertical-text-alignment>
                            <horizontal-text-alignment>left</horizontal-text-alignment>
                        </label>
                        <label>
                            <text>Preset Name</text>
                            <vertical-text-alignment>center</vertical-text-alignment>
                            <horizontal-text-alignment>left</horizontal-text-alignment>
                            <margins>
                                <top>10</top>
                            </margins>
                            <sizing>
                                <horizontal method="fill">100</horizontal>
                            </sizing>
                        </label>
                        <text-box id="input.preset-name">
                            <sizing>
                                <horizontal method="fill">100</horizontal>
                            </sizing>
                            <surface>
                                <flat>#33000000</flat>
                            </surface>
                        </text-box>
                        <label>
                            <text>Preset Description</text>
                            <vertical-text-alignment>center</vertical-text-alignment>
                            <horizontal-text-alignment>left</horizontal-text-alignment>
                            <margins>
                                <top>10</top>
                            </margins>
                            <sizing>
                                <horizontal method="fill">100</horizontal>
                            </sizing>
                        </label>
                        <text-box id="input.preset-desc">
                            <sizing>
                                <horizontal method="fill">100</horizontal>
                            </sizing>
                        </text-box>
                        <flow-layout direction="vertical">
                            <children>
                                <flow-layout direction="horizontal">
                                    <children>
                                        <label>
                                            <text>Blocks</text>
                                            <vertical-text-alignment>center</vertical-text-alignment>
                                            <horizontal-text-alignment>left</horizontal-text-alignment>
                                            <sizing>
                                                <horizontal method="fill">70</horizontal>
                                            </sizing>
                                        </label>
                                        <button id="action.add-block-to-preset">
                                            <text>+ Block</text>
                                            <horizontal-alignment>right</horizontal-alignment>
                                            <renderer>
                                                <flat color="#30000000" hovered-color="#77afafaf" disabled-color="black"/>
                                            </renderer>
                                            <sizing>
                                                <horizontal method="fill">30</horizontal>
                                            </sizing>
                                        </button>
                                    </children>
                                    <vertical-alignment>center</vertical-alignment>
                                </flow-layout>
                                <scroll direction="vertical">
                                    <flow-layout direction="vertical" id="block-item-preview-holder">
                                        <children/>
                                        <sizing>
                                            <horizontal method="fill">100</horizontal>
                                        </sizing>
                                        <gap>5</gap>
                                    </flow-layout>
                                    <sizing>
                                        <horizontal method="fill">100</horizontal>
                                        <vertical method="fill">10</vertical>
                                    </sizing>
                                </scroll>
                            </children>
                            <gap>5</gap>
                            <margins>
                                <top>10</top>
                            </margins>
<!--                            <horizontal-alignment>center</horizontal-alignment>-->
                            <vertical-alignment>top</vertical-alignment>
                        </flow-layout>
                        <flow-layout direction="horizontal">
                            <children>
                                <button id="action.cancel-create-new-mining-preset">
                                    <text>Cancel</text>
                                    <horizontal-alignment>left</horizontal-alignment>
                                    <renderer>
                                        <flat color="#33000000" hovered-color="#77afafaf" disabled-color="black"/>
                                    </renderer>
                                    <sizing>
                                        <horizontal method="fill">50</horizontal>
                                    </sizing>
                                </button>
                                <button id="action.create-new-mining-preset">
                                    <text>Create</text>
                                    <horizontal-alignment>right</horizontal-alignment>
                                    <renderer>
                                        <flat color="#33000000" hovered-color="#77afafaf" disabled-color="black"/>
                                    </renderer>
                                    <sizing>
                                        <horizontal method="fill">50</horizontal>
                                    </sizing>
                                </button>
                            </children>
                            <sizing>
                                <horizontal method="fill">100</horizontal>
                            </sizing>
                        </flow-layout>
                    </children>

                    <surface>
                        <flat>#55000000</flat>
                    </surface>

                    <sizing>
                        <horizontal method="fill">50</horizontal>
                        <vertical method="content">10</vertical>
                    </sizing>

                    <gap>5</gap>

                    <vertical-alignment>center</vertical-alignment>
                    <horizontal-alignment>center</horizontal-alignment>

                    <positioning type="relative">50,50</positioning>

                    <padding>
                        <all>10</all>
                    </padding>
                </flow-layout>
            </children>

            <sizing>
                <horizontal method="fill">100</horizontal>
                <vertical method="fill">100</vertical>
            </sizing>

            <vertical-alignment>top</vertical-alignment>
            <horizontal-alignment>center</horizontal-alignment>

            <padding>
                <all>10</all>
            </padding>

            <surface>
                <blur quality="50" size="10"/>
            </surface>
        </flow-layout>
    </components>
</owo-ui>