<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.20/owo-ui.xsd">
    <components>
        <flow-layout direction="vertical">
            <children>
                <flow-layout direction="vertical" id="bar-holder">
                    <children/>
                </flow-layout>

                <flow-layout direction="vertical">
                    <children>
                        <label>
                            <text>Select Block</text>
                            <shadow>true</shadow>
                            <vertical-text-alignment>center</vertical-text-alignment>
                            <horizontal-text-alignment>left</horizontal-text-alignment>
                        </label>
                        <text-box id="input.block-search-bar">
                            <sizing>
                                <horizontal method="fill">100</horizontal>
                            </sizing>
                            <surface>
                                <flat>#33000000</flat>
                            </surface>
                            <show-background>false</show-background>
                        </text-box>
                        <flow-layout direction="vertical">
                            <children>
                                <scroll direction="vertical">
                                    <flow-layout direction="vertical" id="block-item-list-holder">
                                        <children>
                                            <flow-layout direction="horizontal">
                                                <children>
                                                    <flow-layout direction="horizontal">
                                                        <children>
                                                            <item>
                                                                <stack>{{block-id}}</stack>
                                                            </item>
                                                            <label>
                                                                <text>{{block-name}}</text>
                                                                <sizing>
                                                                    <horizontal method="fill">80</horizontal>
                                                                    <vertical method="content">4</vertical>
                                                                </sizing>
                                                                <color>gray</color>
                                                            </label>
                                                        </children>
                                                        <horizontal-alignment>left</horizontal-alignment>
                                                        <sizing>
                                                            <horizontal method="fill">85</horizontal>
                                                        </sizing>
                                                        <gap>5</gap>
                                                    </flow-layout>
                                                    <button id="action.select-block-item">
                                                        <text>+</text>
                                                        <renderer>
                                                            <flat color="#50000000" hovered-color="#77afafaf" disabled-color="black"/>
                                                        </renderer>
                                                        <sizing>
                                                            <horizontal method="fill">15</horizontal>
                                                            <vertical method="fill">100</vertical>
                                                        </sizing>
                                                        <horizontal-alignment>center</horizontal-alignment>
                                                    </button>
                                                </children>
                                                <vertical-alignment>center</vertical-alignment>
                                                <surface>
                                                    <flat>#70000000</flat>
                                                </surface>
                                                <sizing>
                                                    <horizontal method="fill">99</horizontal>
                                                    <vertical method="fixed">22</vertical>
                                                </sizing>
                                                <padding>
                                                    <left>5</left>
                                                </padding>
                                            </flow-layout>
                                        </children>
                                        <sizing>
                                            <horizontal method="fill">100</horizontal>
                                        </sizing>
                                        <gap>5</gap>
                                    </flow-layout>
                                    <sizing>
                                        <horizontal method="fill">100</horizontal>
                                        <vertical method="fill">10</vertical>
                                    </sizing>
                                </scroll>
                            </children>
                            <gap>5</gap>
                            <margins>
                                <top>10</top>
                            </margins>
                            <vertical-alignment>top</vertical-alignment>
                        </flow-layout>
                    </children>

                    <surface>
                        <flat>#55000000</flat>
                    </surface>

                    <sizing>
                        <horizontal method="fill">50</horizontal>
                        <vertical method="fill">90</vertical>
                    </sizing>

                    <gap>5</gap>

                    <vertical-alignment>center</vertical-alignment>
                    <horizontal-alignment>center</horizontal-alignment>

                    <positioning type="relative">50,50</positioning>

                    <padding>
                        <all>10</all>
                    </padding>
                </flow-layout>
            </children>

            <sizing>
                <horizontal method="fill">100</horizontal>
                <vertical method="fill">100</vertical>
            </sizing>

            <vertical-alignment>top</vertical-alignment>
            <horizontal-alignment>center</horizontal-alignment>

            <padding>
                <all>10</all>
            </padding>

            <surface>
                <blur quality="50" size="10"/>
            </surface>
        </flow-layout>
    </components>
    <templates>
        <template name="block-item-list-item">
            <flow-layout direction="horizontal">
                <children>
                    <flow-layout direction="horizontal">
                        <children>
                            <item>
                                <stack>{{block-id}}</stack>
                            </item>
                            <label>
                                <text>{{block-name}}</text>
                                <sizing>
                                    <horizontal method="fill">80</horizontal>
                                    <vertical method="content">4</vertical>
                                </sizing>
                                <color>gray</color>
                            </label>
                        </children>
                        <horizontal-alignment>left</horizontal-alignment>
                        <sizing>
                            <horizontal method="fill">85</horizontal>
                        </sizing>
                        <gap>5</gap>
                    </flow-layout>
                    <button>
                        <text>+</text>
                        <renderer>
                            <flat color="#50000000" hovered-color="#77afafaf" disabled-color="black"/>
                        </renderer>
                        <sizing>
                            <horizontal method="fill">15</horizontal>
                            <vertical method="fill">100</vertical>
                        </sizing>
                        <horizontal-alignment>center</horizontal-alignment>
                    </button>
                </children>
                <vertical-alignment>center</vertical-alignment>
                <surface>
                    <flat>#70000000</flat>
                </surface>
                <sizing>
                    <horizontal method="fill">99</horizontal>
                    <vertical method="fixed">22</vertical>
                </sizing>
                <padding>
                    <left>5</left>
                </padding>
            </flow-layout>
        </template>
    </templates>
</owo-ui>