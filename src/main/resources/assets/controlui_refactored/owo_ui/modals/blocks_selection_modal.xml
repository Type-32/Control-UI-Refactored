<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.20/owo-ui.xsd">
    <components>
        <flow-layout direction="vertical">
            <children>
                <flow-layout direction="vertical" id="bar-holder">
                    <children/>
                </flow-layout>

                <flow-layout direction="vertical">
                    <children>
                        <label id="preview.modal-title">
                            <text>Select Block</text>
                            <shadow>true</shadow>
                            <vertical-text-alignment>center</vertical-text-alignment>
                            <horizontal-text-alignment>center</horizontal-text-alignment>
                            <sizing>
                                <horizontal method="fill">100</horizontal>
                            </sizing>
                        </label>
                        <text-box id="input.block-search-bar">
                            <sizing>
                                <horizontal method="fill">100</horizontal>
                            </sizing>
                            <surface>
                                <flat>#99000000</flat>
                            </surface>
                            <show-background>true</show-background>
                        </text-box>
                        <scroll direction="vertical">
                            <flow-layout direction="vertical" id="block-item-list-holder">
                                <children/>
                                <sizing>
                                    <horizontal method="fill">100</horizontal>
                                </sizing>
                                <gap>2</gap>
                            </flow-layout>
                            <sizing>
                                <horizontal method="fill">100</horizontal>
                                <vertical method="fill">75</vertical>
                            </sizing>
                        </scroll>
                        <flow-layout direction="horizontal">
                            <children>
                                <button id="action.cancel-block-selection">
                                    <text>Cancel</text>
                                    <horizontal-alignment>left</horizontal-alignment>
                                    <renderer>
                                        <flat color="#33000000" hovered-color="#77afafaf" disabled-color="black"/>
                                    </renderer>
                                    <sizing>
                                        <horizontal method="fill">50</horizontal>
                                    </sizing>
                                </button>
                                <button id="action.save-block-selection">
                                    <text>Save</text>
                                    <horizontal-alignment>left</horizontal-alignment>
                                    <renderer>
                                        <flat color="#33000000" hovered-color="#77afafaf" disabled-color="black"/>
                                    </renderer>
                                    <sizing>
                                        <horizontal method="fill">50</horizontal>
                                    </sizing>
                                </button>
                            </children>
                            <horizontal-alignment>center</horizontal-alignment>
                            <vertical-alignment>center</vertical-alignment>
                        </flow-layout>
                    </children>

                    <surface>
                        <flat>#55000000</flat>
                    </surface>

                    <sizing>
                        <horizontal method="fill">50</horizontal>
                        <vertical method="fill">90</vertical>
                    </sizing>

                    <gap>5</gap>

                    <vertical-alignment>center</vertical-alignment>
                    <horizontal-alignment>center</horizontal-alignment>

                    <positioning type="relative">50,50</positioning>

                    <padding>
                        <all>10</all>
                    </padding>

                </flow-layout>
            </children>

            <sizing>
                <horizontal method="fill">100</horizontal>
                <vertical method="fill">100</vertical>
            </sizing>

            <vertical-alignment>top</vertical-alignment>
            <horizontal-alignment>center</horizontal-alignment>

            <padding>
                <all>5</all>
            </padding>

            <surface>
                <blur quality="50" size="10"/>
            </surface>
        </flow-layout>
    </components>
</owo-ui>